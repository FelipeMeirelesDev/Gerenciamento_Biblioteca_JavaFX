<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="650.0" prefWidth="684.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">

   <children>
      <!-- Título principal -->
      <Label layoutX="160.0" layoutY="14.0" text="🔄 Empréstimo de Livro" textFill="#1693a7">
         <font>
            <Font name="SansSerif Bold" size="30.0" />
         </font>
      </Label>

      <!-- CPF do aluno -->
      <Label layoutX="70.0" layoutY="70.0" text="🔍 Buscar aluno (CPF):" textFill="#1693a7">
         <font>
            <Font name="SansSerif Bold" size="18.0" />
         </font>
      </Label>
      <TextField fx:id="campoCPF" layoutX="70.0" layoutY="100.0" prefWidth="234.0" promptText="Digite o CPF" />
      <Button fx:id="btnBuscarAluno" layoutX="320.0" layoutY="100.0" prefWidth="34.0" style="-fx-background-color: #1ee20f; -fx-border-color: black;" text="🔍" textFill="white">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>

      <!-- Buscar Livro -->
      <Label layoutX="70.0" layoutY="161.0" text="🔍 Buscar Livro (Título):" textFill="#1693a7">
         <font>
            <Font name="SansSerif Bold" size="18.0" />
         </font>
      </Label>
      <TextField fx:id="campoTitulo" layoutX="70.0" layoutY="191.0" prefWidth="234.0" promptText="Digite o Título" />
      <Button fx:id="btnBuscarLivro" layoutX="320.0" layoutY="191.0" prefWidth="34.0" style="-fx-background-color: #1ee20f; -fx-border-color: black;" text="🔍" textFill="white">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>

      <!-- Dados do Aluno -->
      <Label layoutX="400.0" layoutY="70.0" text="📋 Aluno selecionado:" textFill="#1693a7">
         <font><Font name="SansSerif Bold" size="18.0" /></font>
      </Label>
      <Label fx:id="labelNomeAluno" layoutX="400.0" layoutY="100.0" text="Nome:" textFill="#1693a7">
         <font><Font name="SansSerif Bold" size="16.0" /></font>
      </Label>
      <Label fx:id="labelCPFAluno" layoutX="400.0" layoutY="130.0" text="CPF:" textFill="#1693a7">
         <font><Font name="SansSerif Bold" size="16.0" /></font>
      </Label>

      <!-- Dados do Livro -->
      <Label layoutX="400.0" layoutY="170.0" text="📚 Livro selecionado:" textFill="#1693a7">
         <font><Font name="SansSerif Bold" size="18.0" /></font>
      </Label>
      <Label fx:id="labelTituloLivro" layoutX="400.0" layoutY="200.0" text="Título:" textFill="#1693a7">
         <font><Font name="SansSerif Bold" size="16.0" /></font>
      </Label>
      <Label fx:id="labelAutorLivro" layoutX="400.0" layoutY="230.0" text="Autor:" textFill="#1693a7">
         <font><Font name="SansSerif Bold" size="16.0" /></font>
      </Label>
      <Label fx:id="labelAnoLivro" layoutX="400.0" layoutY="260.0" text="Ano:" textFill="#1693a7">
         <font><Font name="SansSerif Bold" size="16.0" /></font>
      </Label>

      <!-- Data de Empréstimo -->
      <Label layoutX="70.0" layoutY="250.0" text="📅 Data de Empréstimo:" textFill="#1693a7">
         <font><Font name="SansSerif Bold" size="18.0" /></font>
      </Label>
      <DatePicker fx:id="dataEmprestimo" layoutX="70.0" layoutY="280.0" prefWidth="234.0" />

      <!-- Data de Devolução -->
      <Label layoutX="70.0" layoutY="338.0" text="📅 Devolução Prevista:" textFill="#1693a7">
         <font><Font name="SansSerif Bold" size="18.0" /></font>
      </Label>
      <DatePicker fx:id="dataDevolucao" layoutX="70.0" layoutY="368.0" prefWidth="234.0" />

      <!-- Botões finais -->
      <Button fx:id="btnConfirmar" layoutX="70.0" layoutY="428.0" prefHeight="33.0" prefWidth="243.0" style="-fx-background-color: #1693a7; -fx-text-fill: white;" text="✅ Confirmar Empréstimo">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <font>
            <Font name="SansSerif Bold" size="18.0" />
         </font></Button>
      <Button fx:id="btnConfirmar1" layoutX="70.0" layoutY="482.0" prefHeight="33.0" prefWidth="243.0" style="-fx-background-color: #d32f2f; -fx-text-fill: white;" text="❌ Cancelar">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <font>
            <Font name="SansSerif Bold" size="18.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
